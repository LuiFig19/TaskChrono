{
  "name": "taskchrono-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000 -H 127.0.0.1",
    "dev:network": "next dev -p 3000 -H 0.0.0.0",
    "dev:classic": "next dev -p 3000 -H 127.0.0.1",
    "build": "prisma generate && next build",
    "start": "next start -p 3000 -H 127.0.0.1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init --create-only",
    "prisma:deploy": "prisma migrate deploy",
    "prepare": "husky install",
    "postinstall": "prisma generate && husky install"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.14.0",
    "@tiptap/react": "^3.6.1",
    "@tiptap/starter-kit": "^3.6.1",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.28",
    "framer-motion": "^12.23.12",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "pino": "^9.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-grid-layout": "^1.5.2",
    "react-resizable": "3.0.5",
    "recharts": "^2.15.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.4.0",
    "swr": "^2.2.5",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.18.0 <21"
  }
}
