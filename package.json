    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.5.0",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-grid-layout": "^1.5.2",
    "react-resizable": "3.0.5",
    "recharts": "^2.15.4",
    "swr": "^2.2.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.4.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
